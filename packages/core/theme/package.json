{
	"name": "@kopexa/theme",
	"version": "1.4.1",
	"description": "The default theme for Kopexa components",
	"keywords": [
		"theme",
		"theming",
		"design",
		"ui",
		"components",
		"classNames",
		"css"
	],
	"author": "Kopexa <support@kopexa.com>",
	"homepage": "https://kopexa.com",
	"license": "MIT",
	"main": "src/index.ts",
	"sideEffects": false,
	"files": [
		"dist",
		"config.js",
		"config.d.ts",
		"plugin.js",
		"plugin.d.ts",
		"colors.js",
		"colors.d.ts"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kopexa-grc/sight.git",
		"directory": "packages/core/theme"
	},
	"bugs": {
		"url": "https://github.com/kopexa-grc/sight/issues"
	},
	"scripts": {
		"build": "tsup src --dts",
		"build:fast": "tsup src",
		"dev": "pnpm build:fast --watch",
		"clean": "rimraf dist .turbo",
		"typecheck": "tsc --noEmit",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"dependencies": {
		"@kopexa/shared-utils": "workspace:*",
		"clsx": "^2.1.1",
		"color": "^5.0.0",
		"color2k": "^2.0.3",
		"deepmerge": "4.3.1",
		"flat": "^6.0.1",
		"tailwind-merge": "3.3.1",
		"tailwind-variants": "1.0.0",
		"tw-animate-css": "^1.3.5"
	},
	"peerDependencies": {
		"tailwindcss": ">=4.0.0"
	},
	"devDependencies": {
		"@types/color": "^4.2.0",
		"@types/flat": "^5.0.2",
		"clean-package": "2.2.0",
		"tailwindcss": "4.1.11"
	},
	"tsup": {
		"clean": true,
		"target": "es2019",
		"publicDir": "styles",
		"format": [
			"cjs",
			"esm"
		]
	}
}
