		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"turbo": "^2.5.5",
		"typescript": "~5.8.3"
	},
	"packageManager": "pnpm@8.15.6",
	"name": "@kopexa/design-system"
