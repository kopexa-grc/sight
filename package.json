		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.1.0",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"jest-watch-typeahead": "^3.0.1",
		"plop": "^4.0.1",
		"prettier": "^3.6.2",
