{
	"$schema": "https://turborepo.com/schema.json",
    "globalDependencies": ["tsconfig.json"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", "storybook-static/**"]
		},
		"start": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"clean": {
			"cache": false,
			"outputs": []
		},
		"dev": {
			"cache": false
		},
		"//#lint": {
			"dependsOn": ["^lint"]
		},
		"//#lint:fix": {
			"dependsOn": ["^lint:fix"]
		},
		"preview-storybook": {
			"dependsOn": ["^build"],
			"cache": false
		}
	}
}
